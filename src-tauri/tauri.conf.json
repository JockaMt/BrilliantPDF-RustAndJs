{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Brilliant PDF",
  "version": "1.0.1",
  "identifier": "com.brilliantpdf.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Brilliant PDF",
        "width": 1280,
        "height": 720,
        "visible": false,
        "label": "main",
        "center": true
      },{
        "title": "Loading",
        "width": 960,
        "height": 540,
        "visible": true,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "center": true
      }
    ],
    "security": {
      "csp": "Content-Security-Policy: default-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],

    "createUpdaterArtifacts": true,
    "resources": [
      "src/fonts/*",
      "src/gen_pdf.exe"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYzNzVFQUE2NzlBRTY2NjQKUldSa1pxNTVwdXAxODRDdGxNMzUzRjhIelNpVVdNVWhmSFNQTUNsOVZEc1BJNEVZK3NVTHNaQngK",
      "endpoints": [
        "https://brilliantsoftwareapi.onrender.com/check-for-updates?language=pt-br"
      ],
      "dialog": true
    }
  }
}
