{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Brilliant PDF",
  "version": "0.1.0",
  "identifier": "com.brilliantpdf.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Brilliant PDF",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "src/fonts/*",
      "src/gen_pdf.exe"
    ]
  }
}
